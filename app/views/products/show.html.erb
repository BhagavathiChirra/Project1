<h1>Product <%= @product.name%></h1>

<div class="container">
  <div class="row">
    <div class="col-sm">
      <% if @product.image.present? %>

      <%= cl_image_tag @product.image%>

      <% end %>
      <p>
        <strong>Price:</strong>$<%= @product.price%>
      </p>
      <p>
        <strong>Description</strong><%= @product.description%>
      </p>
      <p>
        <%= button_to 'Add to Cart', add_to_cart_path(@product), class: :button%>
      </p>
      <br>
      <% if @current_user.present? && @current_user.admin?%>
        <%=  link_to "Edit", edit_product_path(@product)%>
        |
        <%=  link_to "Delete", product_path(@product), method: :delete%>
      <% end %>

    </div>
    <div class="col-sm">
      <div id="map"> </div>
    </div>
  </div>
</div>

<script>

      function initMap() {
        var myLatLng = {lat: <%= @product.latitude %>, lng: <%= @product.longitude %>};
        console.log('INITMAP', myLatLng);
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 14,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
</script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAJ0a73hhDIswEV4mTLGjmLIx4oHHFUelM&callback=initMap">
    </script>
