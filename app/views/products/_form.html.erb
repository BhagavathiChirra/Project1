<%= form_for(@product, :html => {:multipart => true}) do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <br>
  <%= f.label :price%>
  <%= f.text_field :price%>
  <br>
  <%= f.label :description%>
  <%= f.text_field :description%>
  <br>
  <%= f.label :category_id, 'Category' %>
  <%= f.select :category_id, Category.pluck(:name, :id), include_blank: true %>
  <br>
  <%= f.label :image%>
  <%= f.cl_image_upload :image%>
  <br>
  <%= f.submit%>
<% end %>
