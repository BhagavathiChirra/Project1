<h1>Show Cart</h1>

<table>
    <tr>
      <td><strong>Product</strong></td>
      <td><strong>Category</strong></td>
      <td><strong>Price</strong></td>
      <td></td>
    </tr>
    <% @cart.each do |c| %>
    <tr>
      <td>
        <%= cl_image_tag c.product.image, class: :product_cart_image%>
      </td>
      <td>
        <%= c.product.name %>
      </td>
      <td>
        <%= number_to_currency(c.product.price) %>
      </td>
      <td>
        <%= link_to "Delete", remove_from_cart_path(c.id), method: :delete %>
      </td>
    </tr>
    <% end %>
</table>
